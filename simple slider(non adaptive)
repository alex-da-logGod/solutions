<body>
  <div class="wrapper">
    <div class="slider">
      <div class="slider-line">
        <div class="item_1 it">1</div>
        <div class="item_2 it">2</div>
        <div class="item_3 it">3</div>
        <div class="item_4 it">4</div>
      </div>
    </div>
    <div class="btns">
      <button class="prev">prev</button>
      <button class="next">next</button>
    </div>
  </div>
  
